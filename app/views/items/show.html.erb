<% content_for :head do  %>
  <title>Monolist | <%= @item.title %></title>
<% end %>
<% content_for :meta_description do  %>
  <meta name="description" content="<%= @item.title %>に関する情報です。この商品を欲しい人、持ってる人を表示しています。">
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
          <% if @item.large_image.present? %>
            <%= link_to image_tag(@item.large_image , alt: @item.title), @item.detail_page_url, :target => "_blank" %>
          <% else %>
            <%= link_to image_tag("no-image.png" , alt: @item.title), @item.detail_page_url, :target => "_blank" %>
          <% end %>
        </div>
      </div>
      <div class="title">
        <% #TODO 商品タイトル %>
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
          <section class="have_users">
            <% if @have_users.any? %>
              <div class="user_avatars">
                <% @have_users.each do |user| %>
                  <%= link_to gravatar_for(user, size: 20), user %>
                <% end %>
              </div>
            <% end %>
          </section>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
          <section class="want_users">
            <% if @want_users.any? %>
              <div class="user_avatars">
                <% @want_users.each do |user| %>
                  <%= link_to gravatar_for(user, size: 20), user %>
                <% end %>
              </div>
            <% end %>
          </section>
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to('楽天詳細ページへ', @item.detail_page_url, :target => "_blank") %>
      </div>
    </div>
  </div>
</div>
